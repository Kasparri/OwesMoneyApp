<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:orientation="horizontal">


    <!-- TextView with layout weight of .50 out of 1 -->
    <TextView
        android:id="@+id/billing_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <!-- Button with layout weight of .20 out of 1 -->
    <Button
        android:id="@+id/edit_billing"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:text="@string/edit_button"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <!-- Button with layout weight of .20 out of 1 -->
    <Button
        android:id="@+id/delete_billing"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.20"
        android:text="@string/delete_button"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <!-- Checkbox with layout weight of .1 out of 1 -->
    <CheckBox
        android:id="@+id/billing_checkbox"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.10"/>

</LinearLayout>